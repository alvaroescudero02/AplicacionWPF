<Window x:Class="PantallaPrincipal.Tabla"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PantallaPrincipal"
        mc:Ignorable="d"
        Title="Tabla" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dg_libros" ItemsSource="{Binding Path=listaLibros}" HorizontalAlignment="Left" Height="337" Margin="27,50,0,0" VerticalAlignment="Top" Width="733"/>
        <Menu Height="21" Margin="18,9,40,0" VerticalAlignment="Top">
            <MenuItem Header="Archivo">
                <MenuItem x:Name="mi_nuevo" Header="Nuevo.." Click="mi_nuevo_Click"/>
            </MenuItem>
        </Menu>
        <Button x:Name="bt_modificar" Content="Modificar" HorizontalAlignment="Left" Margin="598,392,0,0" VerticalAlignment="Top" Click="bt_modificar_Click"/>

    </Grid>
</Window>
